# Add pywal binary to PATH
export PATH="$HOME/Library/Python/3.9/bin:$PATH"

# Pywal aliases and functions
# Safe wal-refresh function instead of alias
function wal-refresh() {
    # Use the safe refresh script to avoid terminal closure
    if [[ -f ~/.config/wal/safe_refresh.sh ]]; then
        ~/.config/wal/safe_refresh.sh
    else
        echo "🔄 Basic color refresh..."
        
        # Fallback: just reload sequences if they exist
        if [[ -f ~/.cache/wal/sequences ]]; then
            cat ~/.cache/wal/sequences
            echo "✅ Colors reloaded from cache"
        else
            echo "❌ No color cache found. Run 'setwal <image>' first."
            return 1
        fi
    fi
}

alias wal-image='wal -i -n'
alias wal-random='wal -i ~/Pictures/Wallpapers/ -n && ~/.config/wal/scripts/iterm2.sh'
alias wal-light='wal -l -i -n'
alias wal-dark='wal -i -n'

# Function to set wallpaper and update colors
function setwal() {
    if [ $# -eq 0 ]; then
        echo "Usage: setwal <image_path>"
        echo "       setwal random     (random from ~/Pictures/Wallpapers/)"
        return 1
    fi
    
    if [ "$1" = "random" ]; then
        # Set random wallpaper from Pictures directory
        local wallpaper_dir="$HOME/Pictures/Wallpapers"
        if [ ! -d "$wallpaper_dir" ]; then
            wallpaper_dir="$HOME/Pictures"
        fi
        
        # Find a random image
        local image=$(find "$wallpaper_dir" -type f \( -iname "*.jpg" -o -iname "*.jpeg" -o -iname "*.png" -o -iname "*.gif" -o -iname "*.bmp" \) | sort -R | head -1)
        
        if [ -n "$image" ]; then
            # Generate colors safely
            if ~/.config/wal/safe_wal.sh "$image"; then
                # Apply smart cursor fix
                python3 ~/.config/wal/fix_cursor_sequences.py >/dev/null 2>&1
                
                # Apply color sequences with fixed cursor
                if [[ -f ~/.cache/wal/sequences ]]; then
                    cat ~/.cache/wal/sequences
                fi
                
                # Set wallpaper separately using macOS command
                osascript -e "tell application \"Finder\" to set desktop picture to POSIX file \"$image\""
                ~/.config/wal/scripts/iterm2.sh 2>/dev/null
                echo "Applied random wallpaper: $(basename "$image")"
            else
                echo "Failed to generate colors for: $(basename "$image")"
            fi
        else
            echo "No images found in $wallpaper_dir"
        fi
    else
        # Set specific wallpaper
        if [ -f "$1" ]; then
            # Generate colors safely
            if ~/.config/wal/safe_wal.sh "$1"; then
                # Apply smart cursor fix
                python3 ~/.config/wal/fix_cursor_sequences.py >/dev/null 2>&1
                
                # Apply color sequences with fixed cursor
                if [[ -f ~/.cache/wal/sequences ]]; then
                    cat ~/.cache/wal/sequences
                fi
                
                # Set wallpaper separately using macOS command
                osascript -e "tell application \"Finder\" to set desktop picture to POSIX file \"$1\""
                ~/.config/wal/scripts/iterm2.sh 2>/dev/null
                echo "Applied wallpaper: $(basename "$1")"
            else
                echo "Failed to generate colors for: $(basename "$1")"
            fi
        else
            echo "File not found: $1"
        fi
    fi
}

# Function to show current pywal colors
function walcolors() {
    echo "Current pywal color scheme:"
    echo "============================"
    for i in {0..15}; do
        printf "\033[48;5;${i}m  \033[0m Color $i\n"
    done
}

# Function to update colors from current wallpaper without changing it
function walupdate() {
    local current_wallpaper=""
    local detection_method=""
    
    echo "🔍 Detecting current wallpaper..."
    
    # Method 1: Check pywal cache first (most reliable for our use case)
    if [[ -f ~/.cache/wal/wal ]]; then
        current_wallpaper=$(cat ~/.cache/wal/wal 2>/dev/null)
        if [[ -n "$current_wallpaper" && -f "$current_wallpaper" ]]; then
            detection_method="pywal cache"
        else
            current_wallpaper=""
        fi
    fi
    
    # Method 2: Try System Events AppleScript if cache failed
    if [[ -z "$current_wallpaper" ]]; then
        if current_wallpaper=$(osascript -e 'tell application "System Events" to tell every desktop to get picture' 2>/dev/null); then
            # Clean up the output (remove quotes and handle multiple desktops)
            current_wallpaper=$(echo "$current_wallpaper" | sed 's/^"//' | sed 's/"$//' | head -1)
            if [[ -f "$current_wallpaper" ]]; then
                detection_method="System Events"
            else
                current_wallpaper=""
            fi
        fi
    fi
    
    # Method 3: Manual specification
    if [[ -z "$current_wallpaper" ]]; then
        echo "❌ Could not auto-detect wallpaper"
        echo "📝 Available options:"
        echo "   1. Specify manually: walupdate <image_path>"
        echo "   2. Use test image: walupdate ~/Desktop/Screenshot\\ 2025-07-27\\ at\\ 08.46.32.png"
        echo "   3. Set new wallpaper: setwal <image_path>"
        
        # Check if user provided a manual path
        if [[ $# -gt 0 && -f "$1" ]]; then
            current_wallpaper="$1"
            detection_method="manual specification"
        else
            return 1
        fi
    fi
    
    echo "✅ Found wallpaper via $detection_method: $(basename "$current_wallpaper")"
    echo "🎨 Updating colors..."
    
    # Generate colors using safe wrapper
    if ~/.config/wal/safe_wal.sh "$current_wallpaper"; then
        # Apply smart cursor fix
        python3 ~/.config/wal/fix_cursor_sequences.py >/dev/null 2>&1
        
        # Manually apply color sequences with fixed cursor
        if [[ -f ~/.cache/wal/sequences ]]; then
            cat ~/.cache/wal/sequences
        fi
        
        echo "✅ Colors applied to terminal with smart cursor"
        
        # Update iTerm2
        if [[ -f ~/.config/wal/scripts/iterm2.sh ]]; then
            ~/.config/wal/scripts/iterm2.sh 2>/dev/null
        fi
        
        echo "🎉 Colors updated from: $(basename "$current_wallpaper")"
    else
        echo "❌ Failed to generate colors from: $current_wallpaper"
        return 1
    fi
}

# Function to preview pywal theme without applying
function walpreview() {
    if [ $# -eq 0 ]; then
        echo "Usage: walpreview <image_path>"
        return 1
    fi
    
    if [ -f "$1" ]; then
        wal -i "$1" --preview
    else
        echo "File not found: $1"
    fi
}

# Function to configure iTerm2 transparency
function waltransparency() {
    if [ $# -eq 0 ]; then
        echo "🎨 iTerm2 Transparency Control"
        echo "============================="
        echo ""
        echo "Usage: waltransparency <level>"
        echo "       waltransparency show"
        echo ""
        echo "Examples:"
        echo "  waltransparency 0.2    # 20% transparency"
        echo "  waltransparency 0.3    # 30% transparency (default)"
        echo "  waltransparency 0.5    # 50% transparency"
        echo "  waltransparency show   # Show current setting"
        echo ""
        echo "Presets:"
        echo "  0.1 - Subtle     0.3 - Medium (default)"
        echo "  0.2 - Light      0.4 - Strong"
        echo "  0.5 - Dramatic"
        return 1
    fi
    
    python3 ~/.config/wal/scripts/transparency_config.py "$1"
}

# Function to fix cursor visibility immediately
function walcursor() {
    echo "🎯 Fixing Cursor Visibility"
    echo "==========================="
    
    if [[ -f ~/.config/wal/fix_cursor_sequences.py ]]; then
        python3 ~/.config/wal/fix_cursor_sequences.py
        echo ""
        echo "📝 Test cursor visibility:"
        echo "  1. Open vim: vim ~/.zshrc"
        echo "  2. Move cursor around"
        echo "  3. Try insert mode (press 'i')"
        echo "  4. Cursor should be clearly visible!"
    else
        echo "❌ Cursor fix script not found"
        return 1
    fi
}

function wallpaper() {
   if [ $# -eq 0 ]; then
        echo "Usage: wallpaper <image_path>"
        return 1
    fi

    if [ -f "$1" ]; then
        walupdate
        setwal "$1"
        wal-refresh
    else
        echo "File not found: $1"
    fi
    if [ $# -eq 0 ]; then
        return 1
    fi
 }

# Apply pywal colors after initialization (deferred loading)
if [[ -f ~/.config/wal/load_colors.zsh ]]; then
    # Schedule color loading after prompt is ready
    autoload -U add-zsh-hook
    
    # Function to load colors after first prompt
    _load_pywal_colors() {
        source ~/.config/wal/load_colors.zsh
        # Remove this hook after first execution
        add-zsh-hook -d precmd _load_pywal_colors
    }
    
    # Add hook to load colors after first prompt
    add-zsh-hook precmd _load_pywal_colors
fi
